{% extends 'partial/base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <h3>Dashboard</h3>

    <div class="row">
        <div class="col">
            <div class="card bg-gradient-green">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <p class="card-text">{{ totalOrders }}</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-gradient-orange">
                <div class="card-body">
                    <h5 class="card-title">Running Orders</h5>
                    <p class="card-text">{{ runningOrders }}</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card bg-gradient-green">
                <div class="card-body">
                    <h5 class="card-title">Total Revenue</h5>
                    <p class="card-text">{{ revenue }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
