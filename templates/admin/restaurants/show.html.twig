{% extends 'partial/base.html.twig' %}

{% block title %}Restaurants{% endblock %}

{% block body %}
    <h1>Restaurants</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ restaurant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ restaurant.name }}</td>
            </tr>
            <tr>
                <th>MediaId</th>
                <td>{{ restaurant.mediaId }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ restaurant.address }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ restaurant.email }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ restaurant.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_restaurants_index') }}">back to list</a>
    <a href="{{ path('admin_restaurants_edit', {'id': restaurant.id}) }}">edit</a>

{% endblock %}
