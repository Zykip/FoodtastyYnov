{% extends 'partial/base.html.twig' %}

{% block body %}
    <h3>Orders</h3>

    <table class="table">
        <thead>
            <tr>
                <th>OrderID</th>
                <th>Time</th>
                <th>Customer</th>
                <th>Items</th>
                <th>Restaurant</th>
                <th>Status</th>
                <th>View</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.createdAt.format('Y-m-d h:i A') }}</td>
                <td>{{ order.customer.firstName }} {{ order.customer.name }}</td>
                <td>{{ order.dishes|length }}</td>
                <td>{{ order.restaurant.name }}</td>
                <td>{{ order.isDelivered ? 'Delivered' : 'In Progress' }}</td>
                <td><a href="{{ path('admin_orders_view', {id: order.id}) }}" class="btn btn-primary">View</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block title %}
    Orders
{% endblock %}

