{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% extends 'partial/site.html.twig' %}
{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="hero_in detail_page background-image" data-background="url(img/restaurant_detail_hero.jpg)"
         style="background-image: url({{ asset('build/img/restaurant_detail_hero.jpg') }});">
        <div class="wrapper opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.5)"
             style="background-color: rgba(0, 0, 0, 0.5);">

            <div class="container">
                <div class="main_info">
                    <div class="row">
                        <div class="col-xl-4 col-lg-5 col-md-6">
                            <h1 class="h3 mb-3 font-weight-normal">Restaurant sign in</h1>
                            <h6>For users go to <a href="{{ path('app_login') }}">Login</a></h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container margin_detail">
        {{ form_start(form) }}
            {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
