{% extends 'base.html.twig' %}

{% block title %}Dishes{% endblock %}

{% block body %}
    <h1>Dishes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dish.id }}</td>
            </tr>
            <tr>
                <th>MediaId</th>
                <td>{{ dish.mediaId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ dish.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ dish.price }}</td>
            </tr>
            <tr>
                <th>RestaurantId</th>
                <td>{{ dish.restaurantId }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ dish.createdAt ? dish.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ dish.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('dishes_index') }}">back to list</a>

    <a href="{{ path('dishes_edit', {'id': dish.id}) }}">edit</a>

    {{ include('dishes/_delete_form.html.twig') }}
{% endblock %}
