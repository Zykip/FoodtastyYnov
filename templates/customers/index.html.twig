{% extends 'partial/base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
    <h1 class="d-inline-block">Customers</h1>
    <a href="{{ path('admin_customers_new') }}" class="btn btn-primary float-right">Create new</a>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>Name</th>
            <th>Email</th>
            <th>PostalAddress</th>
            <th>Balance</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.firstName }}</td>
                <td>{{ customer.name }}</td>
                <td>{{ customer.email }}</td>
                <td>{{ customer.postalAddress }}</td>
                <td>{{ customer.balance }}</td>
                <td>
                    <a href="{{ path('admin_customers_edit', {'id': customer.id}) }}" class="btn btn-primary">edit</a>
                    {{include('customers/_delete_form.html.twig')}}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
